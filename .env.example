# VK Group Token (получить в настройках группы -> Работа с API)
VK_TOKEN=your_vk_group_token_here

# VK Group ID (ID вашей группы)
GROUP_ID=your_vk_group_id

# OpenAI API Key (получить на platform.openai.com)
OPENAI_API_KEY=your_openai_api_key_here

# Размер контекста (количество сообщений для запоминания)
CONTEXT_SIZE=10

# Лимит запросов для новых пользователей
DEFAULT_USER_LIMIT=50

# ID администратора бота (ваш VK ID)
ADMIN_USER_ID=your_vk_user_id

# Модель OpenAI для использования
OPENAI_MODEL=gpt-3.5-turbo

# Rate Limiting настройки (защита от спама)
RATE_LIMIT_CALLS=5
RATE_LIMIT_PERIOD=60

# OpenAI Proxy настройки
OPENAI_USE_PROXY=false
OPENAI_PROXY_URL=https://openai-proxy-vercel-kohl.vercel.app
OPENAI_PROXY_KEY=your_proxy_key_here